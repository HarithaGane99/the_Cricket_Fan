			}
			.column::after {
				content: '';
				clear: both;
				display: block;
			}
			.column div {
				position: relative;
				float: left;
				width: 330px;
				height: 200px;
				margin: 0 0 0 25px;
				padding: 0;
			}
			.column div:first-child {
				margin-left: 0;
			}
			.column div span {
				position: absolute;
				bottom: -20px;
				left: 0;
				z-index: -1;
				display: block;
				width: 300px;
				margin: 0;
				padding: 0;
				color: #444;
				font-size: 28px;
				text-decoration: none;
				text-align: center;
				font-weight:300;
				-webkit-transition: .3s ease-in-out;
				transition: .3s ease-in-out;
				opacity: 0;
			}
			figure {
				border: 5px solid red;
				width: 300px;
				height: 200px;
				margin:0;
				padding: 0;
				background: #fff;
				overflow: hidden;
			}
			figure:hover+span {
				bottom: -40px;
				opacity: 1;
			}

	</style>	 

    
